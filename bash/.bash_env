#!/bin/bash

export ASDF_INSTALL="$HOME/.asdf/installs"
export SBT_OPTS="$SBT_OPTS -Xms256m -Xmx2048m -XX:ReservedCodeCacheSize=256m -XX:MaxMetaspaceSize=1536m"
export FZF_DEFAULT_OPTS='-e --height 40% --layout=reverse --border'
export MANPAGER="sh -c 'col -bx | bat -l man -p'"
export BAT_THEME="Dracula"
export DISABLE_UPDATE_PROMPT=true
export PATH=$HOME/Library/Python/2.7/bin:$PATH
export GPG_TTY=$(tty)
. ~/.asdf/plugins/java/set-java-home.zsh
export PATH="$(yarn global bin):$PATH"
export PATH="$ASDF_INSTALL/python/3.8.5/bin:$PATH"
export GPG_TTY=`tty`
